<UserControl x:Class="CustomControlsLibrary.Viewer.TextDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsLibrary.Viewer"
             xmlns:models="clr-namespace:CustomControlsLibrary.Viewer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="{Binding Height, Mode=TwoWay}" d:DesignWidth="{Binding Width,Mode=TwoWay}" Background="Transparent">
    <Grid x:Name="_grid">
        <!--<TextBox x:Name="_text" Background="WhiteSmoke" Height="Auto" Grid.Row="0" TextWrapping="Wrap" AcceptsReturn="True"/>-->
        <Rectangle RadiusX="30" RadiusY="30">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="DarkBlue" Offset="0" />
                    <GradientStop Color="#80000080" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="_content" Margin="12">
            
        </TextBlock>
    </Grid>
</UserControl>
