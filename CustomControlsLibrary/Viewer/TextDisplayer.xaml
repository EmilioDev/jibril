<UserControl x:Class="CustomControlsLibrary.Viewer.TextDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsLibrary.Viewer"
             xmlns:models="clr-namespace:CustomControlsLibrary.Viewer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid>
        <TextBox x:Name="_text" Background="WhiteSmoke" Height="Auto" Grid.Row="0" TextWrapping="Wrap" AcceptsReturn="True"/>
    </Grid>
</UserControl>
