<UserControl x:Class="CustomControlsLibrary.Viewer.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsLibrary.Viewer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="360">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="{Binding File}"></MenuItem>
            <MenuItem Header="{Binding Home}"></MenuItem>
            <MenuItem Header="{Binding Comment}"></MenuItem>
            <MenuItem Header="{Binding View}"></MenuItem>
            <MenuItem Header="{Binding Form}"></MenuItem>
            <MenuItem Header="{Binding Protect}"></MenuItem>
            <MenuItem Header="{Binding Share}"></MenuItem>
            <MenuItem Header="{Binding Help}"></MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <!--poner controles aqui-->
        </Grid>
    </Grid>
</UserControl>
